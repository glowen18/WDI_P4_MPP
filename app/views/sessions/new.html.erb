<h1>Log In To Your Fambook</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :login do |f| %>
    <p><%= flash[:danger] %></p>

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= link_to "(forgot password)", password_resets_new_path %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>

    <!-- <%= f.submit "Log In", class: "btn btn-primary" %> -->
  <% end %>

  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>


<% if current_user %>
  Logged in as: <%= current_user.name %> <%= link_to 'Log Out', logout_path, method: :delete %>
<% else %>

  <%= link_to 'Log In', users_path %>
  <%= link_to 'Log Out', logout_path %>
  <%= link_to 'Sign Up', new_user_path %>
<% end %>
